<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <InvariantGlobalization>true</InvariantGlobalization>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.11.0" />
    <!-- <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Scripting" Version="4.11.0" /> -->
  </ItemGroup>

  <ItemGroup>
    <!-- <ProjectReference Include="..\DryIoc.CompTimeDIGenerator\DryIoc.CompTimeDIGenerator.csproj" OutputItemType="Analyzers"/> -->
    <ProjectReference Include="..\DryIoc.CompTimeDIGenerator\DryIoc.CompTimeDIGenerator.csproj" />
    <ProjectReference Include="..\..\src\DryIoc\DryIoc.csproj" />
  </ItemGroup>

  <PropertyGroup>
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <GeneratedFolder>Generated</GeneratedFolder>
    <CompilerGeneratedFilesOutputPath>$(GeneratedFolder)\$(TargetFramework)</CompilerGeneratedFilesOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="$(GeneratedFolder)/**/*.cs" />
  </ItemGroup>

</Project>
